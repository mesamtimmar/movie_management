<% title "Actor's Profile" %>
<div class='row'>
  <div class='col-md-8 col-md-offset-2'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h1 align='center'><%= @actor.name %></h1>
      </div>
      <div class='panel-body'>
        <div class='row'>

          <div class='col-md-4'>
            <%= image_tag @actor.profile_picture(:medium), class: 'img-responsive' %>
            <% unless @actor.pictures.empty? %>
              <div id='carousel-for-actors'>
                <%= render 'carousel', images: @actor.pictures %>
                <%= render 'modal' %>
              </div>
            <% end %>
          </div>

          <div class='col-md-8'>
            <h2 class='h2-style'>Gender:</h2>
            <%= @actor.gender %>

            <div class='clearfix'></div>
            <h2 class='h2-style'>Biography:</h2>
            <%= @actor.biography %>
          </div>
        </div>
      </div>
    </div>

    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h2 align='center'>Acted In</h2>
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-md-12'>
            <div class='row'>
              <% @movies_worked_in.each do |moive| %>
                <div class='col-sm-3 col-lg-3 col-md-3'>
                  <%= link_to movie_path(moive.id) do %>
                    <div class='thumbnail hvr-float'>
                      <p><%= image_tag moive.top_poster(:medium), class: 'poster-image' %></p>

                      <div class='caption movie-caption text-center'>
                        <%= moive.title %>
                      </div>

                      <div class='avg-star-rating text-center' data-score=<%= moive.get_average_rating %> ></div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <%= paginate @movies_worked_in %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
