<div class="panel-heading">
  <h3 class="panel-title">Sign up</h3>
</div>
<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :profile_picture %>
      <%= f.fields_for :attachment, Attachment.new do |image_form| %>
        <%= image_form.file_field :image %>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.text_field :full_name, placeholder: "Full Name", required: true, autofocus: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email", required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, placeholder: "Password", required: true, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.password_field :password_confirmation, placeholder: "Confirm Password", required: true, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
