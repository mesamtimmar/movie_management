<div class="row">
  <% movies.each do |movie| %>
    <div class='col-sm-3 col-lg-3 col-md-3'>
      <%= link_to movie do %>
        <div class='thumbnail hvr-float'>
          <p><%= image_tag movie.top_poster(:medium), class:'poster-image' %></p>

          <div class='caption movie-caption text-center'>
            <%= movie.title %>
          </div>

          <div class='avg-star-rating text-center' data-score=<%= movie.get_average_rating %> ></div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="col-sm-12">
    <%= link_to "View all", movies_path(filter: category), class: 'link-color btn btn-primary pull-right' %>
  </div>
</div>
