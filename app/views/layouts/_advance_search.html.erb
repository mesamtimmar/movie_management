<div class='panel panel-default'>
  <div class='panel-heading'>
    <h3 align='center'>Advance Search</h3>
  </div>

  <div class='panel-body'>
    <%= form_tag movies_path, method: :get, class: 'form-inline' do %>
      <div class='form-group'>
        <%= text_field_tag :search, params[:search], class:'form-control', placeholder: 'Title' %>
      </div>

      <div class='form-group'>
        <%= text_field_tag :genre, params[:genre], class:'form-control', placeholder: 'Genre' %>
      </div>

      <div class='form-group'>
        <%= text_field_tag :actors, params[:actors], class:'form-control', placeholder: 'Actor' %>
      </div>

      <div class='form-group'>
        <%= text_field_tag :description, params[:description], class:'form-control', placeholder: 'Description' %>
      </div>

      <div class='clearfix'></div>

      <div class='row margin-top-class-10'>
        <div class='col-md-12'>
          <div class='form-group'>
            <strong>Start Date</strong>
            <%= date_field_tag :start_date, params[:start_date], class:'form-control', placeholder: 'Search By Start Date' %>
            <strong>Last Date</strong>
            <%= date_field_tag :end_date, params[:end_date], class:'form-control', placeholder: 'Search By End' %>
          </div>
          <%= submit_tag 'Search', class:'btn btn-default' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
