<div class="navbar-custom">
  <nav class="navbar navbar-inverse navbar-fixed-top">
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Home', root_path, class: 'navbar-brand' %>
      </div>
      <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to 'Add Movie', new_movie_path, class: 'btn-xs btn-default' %></li>

          <li><%= link_to current_user.full_name, user_path(current_user) %></li>

          <li><%= image_tag current_user.show_profile_picture(:medium), width: "35px", height:"50px"; %></li>

          <li><%= link_to 'Edit profile', edit_user_registration_path %></li>

          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      <% else %>
        <ul class='nav navbar-nav navbar-right'>
          <li><%= link_to 'Sign in', new_user_session_path %></li>
          <li><%= link_to 'Sign up', new_user_registration_path %></li>
           <li><%= link_to 'Admin Sign in', new_admin_user_session_path %></li>
        </ul>
      <% end %>
    </div>
  </nav>
</div>
