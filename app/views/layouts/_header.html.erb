<div class="navbar-custom">
  <nav class="navbar navbar-inverse navbar-fixed-top" role='navigation'>
    <div class="container-fluid">
      <div class="navbar-header">
        <%= link_to 'Home', root_path, class: 'navbar-brand' %>
        <%= link_to 'All Movies', movies_path, class: 'navbar-brand' %>
        <button type='button' class='navbar-toggle' data-toggle='collapse' data-target='.navbar-menubuilder'>
        <span class='sr-only'>Toggle navigation</span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
        <span class='icon-bar'></span>
      </div>

      <div class='collapse navbar-collapse navbar-menubuilder'>
        <ul class='nav navbar-nav navbar-right'>
          <li><%= render 'layouts/search' %></li>
          <% if user_signed_in? %>
            <li><%= link_to 'Add Movie', new_movie_path, class: 'link-color btn-primary' %></li>
            <li class='dropdown'>
              <%= link_to 'Profile', user_path(current_user), class: 'dropdown-toggle', 'data-toggle' => 'dropdown' %>
              <ul class='dropdown-menu'>
                <li><%= link_to 'Your Profile', user_path(current_user) %></li>
                <li><%= link_to 'Edit Profile', edit_user_registration_path %></li>
                <li class="divider"></li>
                <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
            <li><%= image_tag current_user.show_profile_picture(:thumb), class: 'profile-picture' %></li>
          <% else %>
            <li><%= link_to 'Sign in', new_user_session_path %></li>

            <li><%= link_to 'Sign up', new_user_registration_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>
</div>
