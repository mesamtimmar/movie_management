<div class='container'>
  <h1>Listing Movies</h1>

  <hr>

  <div class='col-md-12'>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class='col-sm-2 col-lg-2 col-md-2'>
          <%= link_to movie do %>
            <div class='thumbnail hvr-float'>
              <p><%= image_tag movie.top_poster(:medium) %></p>

              <div class='caption movie_caption'>
                <%= movie.title %>
              </div>

              <div class='movie_description'>
                <%= movie.show_description %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
