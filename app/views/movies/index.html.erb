<div class="row">
  <div class="col-md-2"></div>

  <div class="col-md-8">
    <h1>Listing Movies</h1>
    <div class="row">
      <% @movies.each do |movie| %>
        <div class='col-sm-3 col-lg-3 col-md-3'>
          <%= link_to movie do %>
            <div class='thumbnail hvr-float'>
              <p><%= image_tag movie.top_poster(:medium), class:'poster-image' %></p>

              <div class='caption movie_caption'>
                <%= movie.title %>
              </div>

              <div class='movie_description'>
                <%= movie.show_description %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <%= paginate @movies %>
  </div>

  <div class="col-md-2"></div>
</div>
