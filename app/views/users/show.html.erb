<div class='row'>
  <div class='col-md-12'>
    <div class='panel panel-default'>
      <div class='panel-heading'>
        <h1 align='center'>View Profile</h1>
      </div>
      <div class='panel-body'>
        <div class='row'>
          <div class='col-md-2'></div>

          <div class='col-md-2'>
            <%= image_tag @user.show_profile_picture(:medium), class: 'img-responsive' %>
          </div>

          <div class='col-md-6'>
            <strong>Name:</strong>
              <%= @user.full_name %>
            <div class='newline'>
              <strong>Email:</strong>
              <%= @user.email %>
            </div>
          </div>

          <div class='col-md-2'></div>
        </div>

        <div class='row'>
          <div class='col-md-2'></div>

          <div class='col-md-8'>
            <h1 align='center'>Favorite Movies</h1>
            <div class='row'>
              <% @favorite_movies.each do |favorite| %>
                <div class='col-sm-3 col-lg-3 col-md-3'>
                  <%= link_to movie_path(favorite.id) do %>
                    <div class='thumbnail hvr-float'>
                      <p><%= image_tag favorite.top_poster(:medium), class:'poster-image' %></p>

                      <div class='caption movie_caption'>
                        <%= favorite.title %>
                      </div>

                      <div class='movie_description'>
                        <%= favorite.show_description %>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% end %>
            </div>
            <%= paginate @favorite_movies %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
